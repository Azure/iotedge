{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "davidiottest": {
                "username": "$CONTAINER_REGISTRY_USERNAME",
                "password": "$CONTAINER_REGISTRY_PASSWORD",
                "address": "$CONTAINER_REGISTRY_ADDRESS"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0.10-rc1",
              "createOptions": {
                "env": ["ExperimentalFeatures__Enabled=true", "ExperimentalFeatures__EnableMetrics=true"]
              }
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0.10-rc1",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                },
                "env": ["ExperimentalFeatures__Enabled=true", "ExperimentalFeatures__EnableMetrics=true"]
              }
            }
          }
        },
        "modules": {
          "AzureMonitorForIotEdgeModule": {
            "version": "1.0.1",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "env": {
              "LogAnalyticsWorkspaceId": {
                "value": "$LOG_ANALYTICS_WORKSPACE_ID"
              },
              "LogAnalyticsSharedKey": {
                "value": "$LOG_ANALYTICS_SHARED_KEY"
              },
              "MetricsEndpointsCSV": {
                "value": "http://edgeHub:9600/metrics,http://edgeAgent:9600/metrics,http://MetricsSpewer:9417/metrics"
              },
              "ScrapeFrequencyInSecs": {
                "value": "500"
              },
              "CompressForUpload": {
                "value": "true"
              },
              "AllowedMetrics": {
                "value": ""
              },
              "BlockedMetrics": {
                "value": ""
              },
              "HubResourceID": {
                "value": "$HUB_RESOURCE_ID"
              },
              "UploadTarget": {
                "value": "AzureMonitor"
              }
            },
            "settings": {
              "image": "${MODULES.AzureMonitorForIotEdgeModule.debug}",
              "createOptions": "{\"HostConfig\":{\"LogConfig\":{\"Type\":\"json-file\",\"Config\":{\"max-size\":\"4m\",\"max-file\":\"7\"}}}}"
            }
          },
          "MetricsSpewer": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "davidiottest.azurecr.io/docker_exporter:1.0",
              "createOptions": {
                "HostConfig": {
                  "Binds":["/var/run/docker.sock:/var/run/docker.sock"],
                  "PortBindings": {
                    "9417/tcp": [
                      {
                        "HostPort": "9417"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "metricupload": "FROM /messages/modules/AzureMonitorForIotEdgeModule/outputs/metricOutput INTO $upstream)"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}
