{
    "transports": {
        "tcp": "0.0.0.0:1883",
        "tls": "0.0.0.0:8883"
    },
    "server_certificate": {
        "path": "identity.pem"
    },
    "inflight_messages": {
        "max_count": 10
    },
    "retained_messages": {
        "max_count": 1000,
        "expiration": "60d"
    },
    "session": {
        "expiration": "60d",
        "messages": {
            "max_message_size": "256kb",
            "max_count": 1000,
            "max_total_space": "16kb",
            "when_full": "drop_new"
        }                
    }
}